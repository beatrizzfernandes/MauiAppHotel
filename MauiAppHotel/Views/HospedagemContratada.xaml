<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.NewPage1"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="Suíte Super Luxo"
               TextColor="{StaticResource MidnightBlue}"
               FontFamily="DMSerifTextRegular"
               FontSize="50"
               HorizontalTextAlignment="Center"/>
        <Frame Margin="10">
            <HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Adultos: " />
                    <Label Text="2" 
                                    TextColor="{StaticResource MidnightBlue}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label Text="Crianças: " />
                    <Label Text="1"
                            TextColor="{StaticResource MidnightBlue}"/>
                            
                </HorizontalStackLayout>
            </HorizontalStackLayout>          

        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in: " />
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out: " />
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia: " />

                <Label Grid.Row="1" Grid.Column="0" Text="03/11/2024 " />
                <Label Grid.Row="1" Grid.Column="1" Text="06/11/2024" />
                <Label Grid.Row="1" Grid.Column="2" Text="3" />
            </Grid>
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout>
                <Label Text="Valor Total: "/>
                <Label Text="R$ 750,00"/>
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Prosseguir com o pagamento"
                HorizontalOptions="Center"
                FontSize="15"
                TextColor="White"
                BackgroundColor="{StaticResource MidnightBlue}" />

        <Button Text="Voltar"
                HorizontalOptions="Center"
                BackgroundColor="{StaticResource MidnightBlue}"
                Margin="0,20,0,0"
                Clicked="Button_Clicked" />

    </VerticalStackLayout>
    
</ContentPage>